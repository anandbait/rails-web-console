<!DOCTYPE html>
<html>
<head>
  <title>Console</title>
  <style>
    body {
      overflow-y: scroll;
      background-color: #000;
      color: silver;
      padding: 6px;
      overflow-y: auto;
    }
    * {
      margin: 0;
      padding: 0;
      font-family: Monaco, "Lucida Console", monospace;
      font-size: 14px;
      box-sizing: border-box;
    }

    html {
      background: #000;
      font-size: 13px;
    }

    .buttons {
      color: black;
      text-align: right;
    }
    .buttons button {
      background: transparent;
      color: #888;
      border: none;
      padding-right: 18px;
    }
    .environment {
      color: white;
      /*float: left;*/
    }
    #results {
    }
    .command-wrap {
      clear: both;
      position: relative;
      background: #222;
      width: 100%;
    }
    .command-wrap .prompt {
      position: absolute;
      top: 0;
      left: 0px;
      font-weight: bold;
      color: white;
    }
    #script {
      display: block;
      resize: none;
      overflow: hidden;
      background: transparent;
      border: none;
      color: white;
      width: 100%;
      padding-left: 15px;
    }
    textarea:focus {
      outline: none;
    }
    .console_result {
    }

    .command {
      color: silver;
    }
    .type-stdout {
      white-space: pre;
    }
    .type-String {
      color: #65b042;
    }
    .type-Numeric {
      color: #3487cc;
    }
    .type-Exception {
      color: #d00;
    }

      
    .return {
      color: white;
    }
  </style>
  <script src="//code.jquery.com/jquery-2.1.1.min.js" type="text/javascript"></script>
</head>
<body>
  <div class="buttons">
    <span class="environment">
      <%= Rails.application.class.parent_name + ":"+Rails.env.to_s %>
    </span>
    <button id=run-script>Run (Enter)</button>
  </div>
  <div id="results"></div>
  <div class="command-wrap">
    <div class="prompt">
    &#10095;
    </div>
    <textarea id="script" rows="1" cols="80"></textarea>
  </div>

  <script>
    var commandHistory = [];
    var commandIndex = 0;
    var run_path = '<%= rails_web_console.run_path %>';
    var results = $('#results');
    var runScriptButton = $('#run-script');

    var script = $('#script');
    script[0].focus();

    runScriptButton.on('click', runScript);
    script.on('keydown', onKeyDown);

    function out(content, className) {
      var div = document.createElement('div');
      div.setAttribute('class', className || '');
      div.innerHTML = content;
      results.append(div);
      script[0].scrollIntoView();
    }

    function runScript() {
      var command = script.val();
      commandHistory.push(command);

      out("&#10095; "+command, 'command');

      $.post(run_path, {script: command}, function(response) {
        out(response.stdout, 'result type-stdout');
        out(response.value, 'result type-'+response.type);
      }, 'json')

    }

    function onKeyDown(ev) {
      if (ev.keyCode == 13) {
        runScript();
        ev.preventDefault();
        script.val('');
      }
      if (ev.keyCode == 38) { //UP
        if (commandIndex > 0) {
          commandIndex -= 1;
        }
        script.val(commandHistory[commandIndex]);
      }
      if (ev.keyCode == 40) { //DOWN
        if (commandIndex < commandHistory.length) {
          commandIndex += 1;
        }
        if (commandIndex == commandHistory.length) {
          // scroll down to get empty prompt again
          script.val('');
        } else { 
          script.val(commandHistory[commandIndex]);
        }
      }
    }
  </script>
</body>
</html>
